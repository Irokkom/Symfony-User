{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block body %}
<h1>
    {% if currentCategory is defined %}
        Articles dans la catégorie : {{ currentCategory.name }}
    {% else %}
        Liste des Articles
    {% endif %}
</h1>

<a href="{{ path('article_new') }}">Créer un nouvel article</a>

<div>
    <h2>Filtrer par catégorie :</h2>
    <ul>
        {% for category in categories %}
            <li>
                <a href="{{ path('article_by_category', { id: category.id }) }}">
                    {{ category.name }}
                </a>
            </li>
        {% endfor %}
    </ul>
</div>

<hr>

<ul>
    {% for article in articles %}
        <li>
            <a href="{{ path('article_show', { id: article.id }) }}">{{ article.title }}</a>
            {% if article.author %}
                <span>- Écrit par : {{ article.author.name }}</span>
            {% else %}
                <span>- Auteur inconnu</span>
            {% endif %}
            <a href="{{ path('article_edit', { id: article.id }) }}">Modifier</a>
            <form method="post" action="{{ path('article_delete', { id: article.id }) }}" style="display: inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer cet article ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                <button type="submit">Supprimer</button>
            </form>
        </li>
    {% endfor %}
</ul>

{% endblock %}
