{% extends 'base.html.twig' %}

{% block title %}Modifier une Catégorie{% endblock %}

{% block body %}
<h1>Modifier la Catégorie : {{ category.name }}</h1>

{{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit">Enregistrer les modifications</button>
{{ form_end(form) }}

<a href="{{ path('category_index') }}">Retour à la liste</a>
<a href="{{ path('category_show', { id: category.id }) }}">Voir la catégorie</a>
{% endblock %}